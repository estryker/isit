<h2>Would you like to allow <%= link_to @client_application.name,@client_application.url %> to access your Istherea account? </h3>
<%= form_tag authorize_url do %>
<%= hidden_field_tag "response_type", params[:response_type]%>
<%= hidden_field_tag "client_id", params[:client_id]%>
<%= hidden_field_tag "redirect_uri", params[:redirect_uri]%>
<%= hidden_field_tag "state", params[:state]%>
<%= hidden_field_tag "scope", params[:scope]%>

<p>
  <h2>
    <%= check_box_tag 'authorize', :class => "check_box" %> allow access
  </h2>
</p>
<p>
  <%= submit_tag 'Save changes', :class=>'btn' %>
</p>
<% end %>

