<!DOCTYPE html>
<html>
<head>
  <title>Istherea</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="description" content="Istherea - intersection of people, place & time. iPhone Apps." />
</head>
<body>
  <div class="container">
    <%= render 'layouts/header' %>
    <section class="round">
      <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </section>
    
    <%= render 'layouts/footer' %>
  </div>
</body>
</html>
