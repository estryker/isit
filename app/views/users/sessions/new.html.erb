<h1> Sign in to Istherea  </h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="field"> 
  <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true ,:placeholder => 'Email',:class=> "input_text", :size => 32 ,:tabindex => 5 %>
</div>

<div class="field">
  <%= f.label :password %>
  <%= f.password_field :password,:class=> "input_text", :size => 32 ,:tabindex => 5 %>
</div>

<label>
  &nbsp;
</label>
<div class="field">
  <%= f.submit "Sign in",  :class => "btn", :tabindex => 12  %>
</div>
<% end %>

<div class="grid_1 alpha">
&nbsp;
</div>
<p>&nbsp;</p>
<h2> Want an account?  </h2>
<div >
  <%= button_to "Sign up", new_user_registration_path, :class => 'btn', :method => 'get'  %>
</div>
</div>

